<Window x:Class="Gra2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gra WPF" Height="600" Width="800"
        KeyDown="OknoGlowne_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Panel sterowania -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="Wczytaj mapę" Click="WczytajMape_Click" Margin="0,0,10,0"/>
            <Label Name="EtykietaDrewna" Content="Drewno: 0" FontSize="16"/>
            <Image x:Name="obraz" Height="100" Width="100" Source="/gracz.png"/>
        </StackPanel>
        <!-- Kontener wyświetlający mapę -->
        <Grid Name="SiatkaMapy" Grid.Row="1" Background="LightGray">
           
            <ComboBox x:Name="Skiny" Width="150" SelectionChanged="ListaSkinow_SelectionChanged" Margin="532,-92,118,502">
                <ComboBoxItem Content="Skin 1" Tag="gracz1.png" IsSelected="True"/>
                <ComboBoxItem Content="Skin 2" Tag="gracz2.png"/>
                <ComboBoxItem Content="Skin 3" Tag="gracz3.png"/>
            </ComboBox>
        </Grid>
       
    </Grid>
</Window>

